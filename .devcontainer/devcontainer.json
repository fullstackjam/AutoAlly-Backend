{
  "name": "universal",
  "dockerFile": "Dockerfile",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements-dev.txt",
  "postCreateCommand": "pre-commit install",
  "postAttachCommand": {
    "server": "dotenv run -- uvicorn app:api --host 0.0.0.0 --port 8000 --reload"
  },
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8000]
}
